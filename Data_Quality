-- lets quickly validate the dataset,
-- india  vs england (2023-oct-29)

select * from cricket.clean.match_detail_clean
where match_type_number = 4686;

-- batsman
select
    team_name,
    batter,
    sum(runs)
from 
    delivery_clean_tbl
where match_type_number = 4686
group by team_name, batter
order by 1,2,3 desc;

-- team 
select
    team_name,
    sum(runs) + sum(extra_runs) as total
from 
    delivery_clean_tbl
where match_type_number = 4686
group by team_name
order by 1,2 desc;
